<odoo>
    <!-- Product Template Form -->
    <record id="view_product_template_form_moq" model="ir.ui.view">
        <field name="name">product.template.form.moq</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tag_ids']" position="after">
                <field name="minimum_qty_tmpl" string="Minimum Order Quantity"
                       attrs="{'invisible': [('product_variant_count','>',1)]}"/>
            </xpath>
        </field>
    </record>

    <!-- Product Variant Form -->
    <record id="view_product_product_form_moq" model="ir.ui.view">
        <field name="name">product.product.form.moq</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <!-- Insert a new group after the Extra Variant Media group -->
            <xpath expr="//group[@name='packaging']" position="after">
                <group string="Minimum Order Rules">
                    <field name="minimum_qty" string="Minimum Order Quantity"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
