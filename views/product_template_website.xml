<odoo>
    <template id="product_qty_default_moq" inherit_id="website_sale.product">
        <xpath expr="//input[@name='add_qty']" position="attributes">
            <!-- Set default value to MOQ -->
            <attribute name="t-att-value">
                combination_info.get('minimum_qty', 1)
            </attribute>
            <!-- Also set the HTML min attribute so the user can't go lower -->
            <attribute name="min">
                <t t-esc="combination_info.get('minimum_qty', 1)"/>
            </attribute>
        </xpath>
    </template>

    <template id="product_moq_notice" inherit_id="website_sale.product">
        <!-- Add message right after quantity selector -->
        <xpath expr="//div[@id='add_to_cart_wrap']" position="after">
            <t t-if="combination_info.get('minimum_qty', 1) &gt; 1">
                <div class="alert alert-info mt-2">
                    Minimum order quantity:
                    <t t-esc="combination_info['minimum_qty']"/>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
